<%= form_for @item do |f| %>
	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :notes %>
		<%= f.text_area :notes, class: "form-control", rows: "5" %>
	</div>

	<%= link_to 'Back', items_path, class: "btn btn-default" %>
	<%= f.submit class: "btn btn-primary" %>
	
<% end %>