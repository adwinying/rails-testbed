.row
	.col-xs-12
		= simple_form_for @recipe do |f|
			= f.input :name, wrapper_html: {class: 'form-group'}, required: false, input_html: {class: 'form-control'}
			= f.input :description, wrapper_html: {class: 'form-group'}, required: false, input_html: {class: 'form-control', rows: 7}
			= f.input :image, as: :file, wrapper_html: {class: 'form-group'}
			
			.row
				#ingredients.col-xs-12.col-sm-6
					%h3 Add ingredients:
					= f.simple_fields_for :ingredients do |ingr|
						= render 'ingredient_fields', f: ingr
					.links
						= link_to_add_association 'Add Ingredient', f, :ingredients, class: "btn btn-primary"
						%br
						%br
				
				#instructions.col-xs-12.col-sm-6
					%h3 Add instructions:
					= f.simple_fields_for :instructions do |inst|
						= render 'instruction_fields', f: inst
					.links
						= link_to_add_association 'Add Instruction', f, :instructions, class: "btn btn-primary"
						%br
						%br

			.row
				.col-xs-12
					= link_to 'Back', @prev_url, class: 'btn btn-default'
					= f.button :submit, class: 'btn btn-primary'