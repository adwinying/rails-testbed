<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h1>ToDo List</h1>
			<h4>Here's a list of things to do.</h4>
			<br>

			<table class="table table-striped">
				<tr>
					<th>Title</th>
					<th>Notes</th>
					<th colspan="3">Actions</th>
				</tr>

				<% @items.each do |item| %>
					<tr>
						<td><%= item.title %></td>
						<td><%= item.notes %></td>
						<td><%= link_to 'Show', item_path(item), class: "btn btn-default" %></td>
						<td><%= link_to 'Edit', edit_item_path(item), class: "btn btn-default" %></td>
						<td><%= link_to 'Delete', item_path(item), method: :delete, class: "btn btn-danger" %></td>
					</tr>
				<% end %>
			</table>
		</div><!-- /.col-xs-12 -->
	</div><!-- /.row -->
</div><!-- /.container -->