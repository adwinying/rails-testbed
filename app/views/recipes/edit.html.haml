.container
	.row
		.col-xs-12
			- if @recipe.errors.any?
				.alert.alert-danger
					%h3 
						= pluralize(@recipe.errors.count, 'errors')
						prevented this post from saving:
					%ul
						- @recipe.errors.full_messages.each do |msg|
							%li= msg

	.row
		.col-xs-12
			%h1 Edit Recipe
			%h4 Edit an existing recipe. All fields are required.

	= render 'form'
